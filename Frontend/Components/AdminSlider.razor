@inject IJSRuntime JS

<div class="slideout js-slideout">
    <div class="slideout__button js-slideout-button" @onclick="ToggleAdminSlider">
    </div>
    <div class="slideout__content js-click-anywhere-else">
        <!-- If we put padding on the same element as the scrollbar, the scrollbar wil also get the padding and look
         off. So, we add padding to an element that does not affect the scrollbar directly -->
        <div class="slideout__content__text">
            <button class="btn btn-warning" @onclick="PrintJwt">
                Print JWT
            </button>
        </div>
    </div>
</div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("adminSlider.closeAdminSliderInit");
        }
    }

    private async Task ToggleAdminSlider()
    {
        await JS.InvokeVoidAsync("adminSlider.toggleAdminSlider");
    }

    private async Task PrintJwt()
    {
        Console.WriteLine("JWT: " + await JS.InvokeAsync<string>("loginHelpers.getItemFromLocal", "authToken"));
    }

}